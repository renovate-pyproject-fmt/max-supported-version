{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"customManagers": [
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/(^|/)pyproject\\.toml$/"
			],
			"matchStrings": [
				"(?:^|\\n)\\s*max-supported-version\\s*=\\s*['\"]?(?<major>\\d+)\\.(?<minor>\\d+)(?:\\.\\d+)?['\"]?"
			],
			"currentValueTemplate": "{{{major}}}.{{{minor}}}",
			"depNameTemplate": "python",
			"depTypeTemplate": "max-supported-version",
			"datasourceTemplate": "python-version",
			"versioningTemplate": "pep440"
		}
	],
	"packageRules": [
		{
			"matchDepTypes": [
				"max-supported-version"
			],
			"groupName": "max-supported-version",
			"commitMessageTopic": "`max_supported_version` in pyproject.toml",
	        "extractVersion": "^(?<version>\\d+\\.\\d+)"
		}
	]
}
